<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.mvp.home.check.CheckActivity"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/colorPrimary">
    <cn.elevator.widget.ToolBar
        android:id="@+id/titlebar"
        style="@style/match2wrap"
        app:showLeftView="true"
        app:title="电梯报告编制" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#fff">
        <LinearLayout
            android:paddingRight="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="检验项目"
                android:textSize="@dimen/sp_12"
                android:textColor="#444"
                android:gravity="left|center_vertical"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="检验类别"
                android:textSize="@dimen/sp_12"
                android:textColor="#444"
                android:gravity="left|center_vertical"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="检验类别 "
                android:textSize="@dimen/sp_12"
                android:textColor="#444"
                android:gravity="left|center_vertical"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="结论"
                android:textSize="@dimen/sp_12"
                android:textColor="#444"
                android:gravity="left|center_vertical"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <cn.elevator.widget.ExpendRecycleView
                android:id="@+id/id_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">
            </cn.elevator.widget.ExpendRecycleView>
            <include layout="@layout/view_nodata"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:padding="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">
        <com.coorchice.library.SuperTextView
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:id="@+id/id_tv_submit"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="提交"
            android:textSize="12sp"
            android:textColor="#fff"
            app:stv_corner="20dp"
            app:stv_solid="@color/colorPrimary"
            android:gravity="center"/>
    </RelativeLayout>
</LinearLayout>