<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/colorLine"/>
    <LinearLayout
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_10">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/id_tv_num"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="#808080"
                    android:textSize="@dimen/sp_12"
                    android:text="流水号" />
                <TextView
                    android:id="@+id/id_tv_report_num"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="#808080"
                    android:textSize="@dimen/sp_12"
                    android:text="报告编号" />
            </LinearLayout>
            <LinearLayout
                android:paddingTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/id_tv_com_devicecode"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="#808080"
                    android:textSize="@dimen/sp_12"
                    android:text="单位设备编码" />
                <TextView
                    android:id="@+id/id_tv_made_code"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="#808080"
                    android:textSize="@dimen/sp_12"
                    android:text="出厂编号" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_10">
                <TextView
                    android:id="@+id/id_tv_device_code"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="#808080"
                    android:textSize="@dimen/sp_12"
                    android:text="设备代码" />
                <TextView
                    android:id="@+id/id_tv_type"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="#808080"
                    android:textSize="@dimen/sp_12"
                    android:text="检验类别" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_10">
                <TextView
                    android:id="@+id/id_tv_eng"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="#808080"
                    android:textSize="@dimen/sp_12"
                    android:text="维保单位" />
                <TextView
                    android:id="@+id/id_tv_state"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="#808080"
                    android:textSize="@dimen/sp_12"
                    android:text="状态" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorLine"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.coorchice.library.SuperTextView
                android:layout_marginLeft="@dimen/dp_10"
                android:id="@+id/id_tv_oper"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="开始编制"
                android:textSize="12sp"
                android:textColor="#fff"
                app:stv_corner="20dp"
                app:stv_solid="@color/colorPrimary"
                android:gravity="center"/>
            <com.coorchice.library.SuperTextView
                android:layout_marginLeft="@dimen/dp_10"
                android:id="@+id/id_tv_rectify"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="整改"
                android:textSize="12sp"
                android:textColor="#fff"
                app:stv_corner="20dp"
                app:stv_solid="@color/colorPrimary"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>