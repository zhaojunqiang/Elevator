<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.mvp.home.check.CheckActivity"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/colorPrimary">
    <cn.elevator.widget.ToolBar
        android:id="@+id/titlebar"
        style="@style/match2wrap"
        app:showLeftView="true"
        app:title="检测任务" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#fff">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10">
            <LinearLayout
                android:id="@+id/id_ll_time"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/id_tv_time"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="年度"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#444"/>
                <ImageView
                    android:id="@+id/id_img_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/down"
                    android:padding="@dimen/dp_4" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/id_ll_type"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/id_tv_type"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="检验类别"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#444"/>
                <ImageView
                    android:id="@+id/id_img_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/down"
                    android:padding="@dimen/dp_4" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/id_ll_company"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/id_tv_company"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="使用单位"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#444"/>
                <ImageView
                    android:id="@+id/id_img_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/down"
                    android:padding="@dimen/dp_4" />
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <cn.elevator.widget.RecycleRefreshLoadLayout
                android:id="@+id/refreshLoadLayoutId"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <cn.elevator.widget.ExpendRecycleView
                    android:id="@+id/id_rv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none">
                </cn.elevator.widget.ExpendRecycleView>
            </cn.elevator.widget.RecycleRefreshLoadLayout>
            <include layout="@layout/view_nodata"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>